{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Warning",
          "path": "logs/Divitiae.Worker-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ]
  },
  "Scanner": {
    "Enabled": true,
    "StartHourLocal": 8,
    "EndHourLocal": 23,
    "IntervalMinutes": 60,
    "PriceThresholdUsd": 50
  },
  "Alpaca": {
    "TradingApiBaseUrl": "https://api.alpaca.markets",
    "MarketDataApiBaseUrl": "https://data.alpaca.markets",
    "MarketDataFeed": "sip"
  }
}
