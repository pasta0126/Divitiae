{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      { "Name": "ToMaximumDepth", "Args": { "maximumDestructuringDepth": 4 } }
    ],
    "Properties": { "ApplicationName": "Divitiae.Worker" }
  },
  "Worker": {
    "InsufficientFundsCooldownMinutes": 5
  },
  "Scanner": {
    "Enabled": true,
    "StartHourLocal": 8,
    "EndHourLocal": 23,
    "IntervalMinutes": 60,
    "PriceThresholdUsd": 50
  },
  "Alpaca": {
    "Symbols": [
      "SCHX", "CLOU", "QDPL", "LEAD", "SPCE", "SIRI", "AKA", "SPLG", "RSP", "SPYD", "INTC", "BAC", "SPY", "VOO", "IVV", "QQQ", "VTI"
    ],
    "EmaShortPeriod": 5,
    "EmaLongPeriod": 20,
    "PositionNotionalFraction": 0.10,
    "MinNotionalUsd": 1.0,
    "TakeProfitPercent": 0.02,
    "StopLossPercent": 0.01,
    "TrailingStopPercent": 0.01,
    "PollingIntervalSeconds": 15,
    "BarsSeed": 100,
    "TimeInForce": "gtc"
  }
}
