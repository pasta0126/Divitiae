{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "path": "logs/Divitiae.Worker-dev-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "Scanner": {
    "Enabled": true,
    "StartHourLocal": 8,
    "EndHourLocal": 23,
    "IntervalMinutes": 60,
    "PriceThresholdUsd": 50
  },
  "Alpaca": {
    "TradingApiBaseUrl": "https://paper-api.alpaca.markets",
    "MarketDataApiBaseUrl": "https://data.alpaca.markets",
    "MarketDataFeed": "iex"
  }
}
